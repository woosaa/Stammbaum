                            {{ form_widget(form.sterbeortplz) }}
                        </div>

                        <div class="col s6">
                            {{ form_label(form.sterbeort) }}
                            {{ form_errors(form.sterbeort) }}
                            {{ form_widget(form.sterbeort) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col s6">
            <h2 class="section-header">Beziehungen</h2>
            <div class="tile">
                <div class="tile-content">
                    <div class="tile-content">
                        <div class="row">
                            <div class="col s6">
                                {{ form_label(form.mutter) }}
                                {{ form_errors(form.mutter) }}
                                {{ form_widget(form.mutter) }}
                            </div>
                            <div class="col s6">
                                {{ form_label(form.vater) }}
                                {{ form_errors(form.vater) }}
                                {{ form_widget(form.vater) }}
                            </div>
                        </div>
                        <div class="row">
                            {{ form_label(form.ismarried) }}
                            {{ form_errors(form.ismarried) }}
                            {{ form_widget(form.ismarried) }}
                        </div>

                        <div class="row" data-group="verheiratet">
                            <div class="col s12">
                                {{ form_label(form.verheiratetMit) }}
                                {{ form_errors(form.verheiratetMit) }}
                                {{ form_widget(form.verheiratetMit) }}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>


    </div>
    <div class="row s2 offset-s10 right">
        <div class="col"><a class="btn-flat" href="{{ path('person') }}">Abbrechen</a></div>
        <div class="col">{{ form_widget(form.submit) }}</div>
    </div>
    {{ form_end(form) }}
{% endblock %}
