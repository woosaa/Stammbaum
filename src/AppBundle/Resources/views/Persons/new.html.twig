                            {{ form_errors(form.geburtsort) }}
                            {{ form_widget(form.geburtsort) }}
                        </div>
                    </div>

                    <div class="row">
                        <div class="col s12">
                            {{ form_label(form.beruf) }}
                            {{ form_errors(form.beruf) }}
                            {{ form_widget(form.beruf) }}
                        </div>
                    </div>

                    <div class="row">
                        <div class="col s12">
                            {{ form_label(form.besonderes) }}
                            {{ form_errors(form.besonderes) }}
                            {{ form_widget(form.besonderes) }}
